{
  "name": "@sourceful-energy/ui",
  "version": "0.1.0",
  "description": "Sourceful Energy Design System - React components for building energy management interfaces",
  "private": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:lib": "tsup && npm run build:css",
    "build:css": "tailwindcss -i ./app/globals.css -o ./dist/styles.css --minify",
    "start": "next start",
    "lint": "next lint",
    "prepublishOnly": "npm run build:lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/srcfl/srcful-design-system.git"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "sourceful",
    "energy",
    "tailwindcss",
    "radix-ui"
  ],
  "author": "Sourceful Energy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/srcfl/srcful-design-system/issues"
  },
  "homepage": "https://design.sourceful.energy",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.23",
    "eslint": "^9",
    "eslint-config-next": "15.1.0",
    "next": "^16.1.1",
    "next-themes": "^0.4.6",
    "postcss": "^8",
    "sonner": "^2.0.7",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^8.5.1",
    "typescript": "^5"
  }
}
